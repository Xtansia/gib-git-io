{
  "manifest_version": 2,

  "name": "Gib Git.io",
  "description": "Gibs a git.io short URL for the current Github page",
  "version": "0.1.0",

  "icons": {
    "16": "logo16.png",
    "32": "logo32.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },

  "page_action": {
    "default_icon": {
      "16": "logo16.png",
      "24": "logo24.png",
      "32": "logo32.png"
    },
    "default_title": "Gib git.io",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "clipboardWrite",
    "declarativeContent",
    "https://git.io/"
  ]
}
